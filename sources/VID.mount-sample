#!/usr/bin/env bash

. /etc/vz/vz.conf
. ${VE_CONFFILE}

declare -A SRC
declare -A DST

# SRC_ARRAY Example: SRC[USERNAME]=/mnt/USENRAME/FOLDER

# DST_ARRAY Example: DST[USERNAME]=/home/USERNAME/FOLDER

for KEY in "${!SRC[@]}"
do
    if [ ! -e ${VE_ROOT}${DST[$KEY]} ]; then
        mkdir -p ${VE_ROOT}${DST[$KEY]}
    fi

    mount -n -t simfs ${SRC[$KEY]} ${VE_ROOT}${DST[$KEY]} -o ${SRC[$KEY]}
done